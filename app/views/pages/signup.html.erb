<div class="header">
	<div class="nav">
		<ul>
			<li><a href="/login" class="no-active">Login</a></li>
			<li><a href="" class="active-log">SignUp</a></li>
		</ul>
	</div>
</div>

<section>
	<div class="outter_form">
		<h2 class="sign">Signup</h2>
		<%= form_for(:session, url: signup_path) do |f| %>
			
			<%= f.text_field :first_name, :placeholder => "First Name", class: 'fname' %><br /><br />
			<%= f.text_field :last_name, :placeholder => "Last Name", class: 'lname' %><br /><br />
			<%= f.email_field :email, :placeholder => "Email", class: 'input' %><br /><br />
			<%= f.password_field :password, :placeholder => "Password...", class: 'input' %><br /><br />

			<%= f.submit "Create Account", class: "button" %>
		<% end %>
	</div>
</section>